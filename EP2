import discord
import random
import asyncio
from discord.ext import commands

Client = discord.client
client = commands.Bot(command_prefix = '//')
Clientdiscord = discord.Client()

@client.event
async def on_ready():
   await client.change_presence(activity=discord.Activity(type=discord.ActivityType.playing,name='Getting Coded'))
   print('Bot is on!')

@client.command()
async def ping(ctx):
    ping3 = discord.Embed(title = 'Pinging in 3....', color =0xFF0000)
    ping2 = discord.Embed(title = 'Pinging in 2....', color =0xFF0000)
    ping1 = discord.Embed(title = 'Pinging in 1....', color =0xFF0000)
    ping = discord.Embed(title = 'Pinging now!', color =0xFF0000)
    ppo = discord.Embed(title = f'Pong! {round(client.latency * 1000)}ms', color = 0x00ff00)

    pinging = await ctx.send(embed = ping3)
    await asyncio.sleep(1)
    await pinging.edit(embed = ping2)
    await asyncio.sleep(1)
    await pinging.edit(embed = ping1)
    await asyncio.sleep(1)
    await pinging.edit(embed = ping)
    await pinging.edit(embed = ppo)


@client.command()
@commands.has_permissions(manage_messages=True)
async def clear(ctx, amount: int):
    await ctx.channel.purge(limit=amount)

@clear.error
async def clear_error(ctx, error):
    if isinstance(error, commands.CheckFailure):
        await ctx.send('You dont have perms to use this command!')

client.run('token')
